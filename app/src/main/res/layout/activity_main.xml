<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation">
    </FrameLayout>

    <nl.joery.animatedbottombar.AnimatedBottomBar
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:abb_tabs="@menu/bottom_nav_bar"
        app:abb_indicatorMargin="12dp"
        app:abb_indicatorHeight="4dp"
        app:abb_indicatorAppearance="round"
        app:abb_selectedIndex="0"
        app:abb_selectedTabType="text"
        app:abb_textAppearance="@style/NavbarText"
        app:abb_tabColorSelected="@color/dark_green"
        app:abb_rippleEnabled="true"
        app:abb_rippleColor="#AB00C382"
        app:abb_tabAnimation="slide"
        app:abb_indicatorAnimation="slide"
        app:abb_tabAnimationSelected="slide"
        app:abb_animationInterpolator="@android:anim/overshoot_interpolator"
        android:layout_alignParentBottom="true">
    </nl.joery.animatedbottombar.AnimatedBottomBar>

</RelativeLayout>