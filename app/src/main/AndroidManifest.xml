<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.delishstudio.delish">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:enableOnBackInvokedCallback="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_launcher_rounded"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Delish"
        tools:targetApi="tiramisu">
        <activity
            android:name=".activities.checkout.NotificationActivity"
            android:exported="false" />
        <activity
            android:name=".activities.profile.ChangeLanguageActivity"
            android:exported="false" />
        <activity
            android:name=".activities.checkout.OrderStatusActivity"
            android:exported="false" />
        <activity
            android:name=".activities.profile.MapPinpointActivity"
            android:exported="false" />
        <activity
            android:name=".activities.profile.SetupAddressActivity"
            android:exported="false" />
        <activity
            android:name=".activities.profile.SavedAddressActivity"
            android:exported="false" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_api" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".activities.home.MapsActivity"
            android:exported="false"
            android:label="@string/title_activity_maps" />
        <activity
            android:name=".activities.profile.PaymentMethodActivity"
            android:exported="false" />
        <activity
            android:name=".activities.profile.DeleteAccountActivity"
            android:exported="false" />
        <activity
            android:name=".activities.auth.SignInActivity"
            android:exported="false" />
        <activity
            android:name=".activities.auth.UserSetupActivity"
            android:exported="false" />
        <activity
            android:name=".activities.profile.AccountSettingsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.auth.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".activities.checkout.CheckoutActivity"
            android:exported="false" />
        <activity
            android:name=".activities.checkout.VoucherActivity"
            android:exported="false" />
        <activity
            android:name=".activities.profile.EditProfileActivity"
            android:exported="false" />
        <activity
            android:name=".activities.home.CartActivity"
            android:exported="false" />
        <activity
            android:name=".activities.categories.CategoryMakananBeratActivity"
            android:exported="false" />
        <activity
            android:name=".activities.categories.CategoryMinumanActivity"
            android:exported="false" />
        <activity
            android:name=".activities.categories.CategoryCamilanActivity"
            android:exported="false" />
        <activity
            android:name=".activities.categories.CategoryVeganActivity"
            android:exported="false" />
        <activity
            android:name=".activities.categories.CategoryNonHalalActivity"
            android:exported="false" />
        <activity
            android:name=".activities.categories.CategoryBahanMakananActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".activities.auth.AuthBoardingActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>